<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default"
    app:cardElevation="6dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/advice_tv_name_chef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/padding_default"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/advice_tv_description"
            app:layout_constraintEnd_toStartOf="@+id/advice_iv_chef"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Chef Dale Talde" />

        <ImageView
            android:id="@+id/advice_iv_star"
            android:layout_width="@dimen/icon_star_size"
            android:layout_height="@dimen/icon_star_size"
            android:padding="@dimen/padding_default"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/advice_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="@dimen/padding_default"
            tools:text="Pentru chef Dale Talde, secretul este... masina de gatit orezul. “Este cea mai simpla si cea mai buna metoda. Vei obtine un orez gatit perfect de fiecare data”."
            android:textSize="@dimen/font_size_subhead"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/advice_iv_chef"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            tools:src="@drawable/dale_talde"
            app:layout_constraintBottom_toTopOf="@+id/advice_tv_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/item_advice_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/advice_iv_chef"
            app:layout_constraintEnd_toEndOf="@+id/advice_iv_chef"
            app:layout_constraintStart_toStartOf="@+id/advice_iv_chef"
            app:layout_constraintTop_toTopOf="@+id/advice_iv_chef" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>