<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HelpActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/help_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/help_iv_logo"
                android:layout_margin="@dimen/margin_large"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_login_height"
                android:src="@drawable/learneat_logo"/>

            <TextView
                android:id="@+id/help_tv_first_paragraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_subhead"
                android:layout_margin="@dimen/margin_default"
                android:text="@string/help_first_paragraph" />

            <ImageView
                android:id="@+id/help_iv_screenshot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_help_screenshot"
                android:src="@drawable/screenshot_recipes"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>